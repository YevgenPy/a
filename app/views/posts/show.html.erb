<% provide :page_title, 'Show posts'%>


<h1 class="mb-4"><%= @post.title %></h1>


<time datetime="<%= @post.formatted_created_at %>">
    <%= @post.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @post.body %>
</p>

<%=link_to 'edit', edit_post_path(@post), class: 'btn btn-primary' %>
<%= button_to 'Destroy', post_path(@post), method: :delete %>



<h2>Add a comment:</h2>
<%= form_with model: [ @post, @comment ] do |form| %>
  <p>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<% @comments.each do |comment| %>
  <time datetime="<%= comment.formatted_created_at %>">
    <%= comment.formatted_created_at %>
  </time>

  <p>
    <%= comment.body %>
  </p>
  <%= button_to 'Delete comment', post_comment_path(@post, comment), method: :delete %>

<% end %>