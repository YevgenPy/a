<% provide :page_title, 'Show posts'%>

<h2><%=  %></h2>

<h1 class="mb-4"><%= @post.title %></h1>

<section class="card-header">
  <%= @post.user.username %>
</section>

<p <%= l @post.created_at, format: :long %>">
<%= l @post.created_at, format: :long %>
</p>

<p class="lead my-3">
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
<%= button_to 'Destroy', post_path(@post), method: :delete, class: 'btn btn-danger' %>

<h2>Add a comment:</h2>
<%= form_with model: [ @post, @comment ] do |form| %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<h2>All comments</h2>
<% if current_user %>
  <% @post.comments.each do |comment| %>
    <div class="alert alert-light">
      <p>
        <%= l comment.created_at, format: :long if comment.created_at %>
      </p>
      <p><strong><%= comment.user.username if comment.user %></strong>: <%=comment.body%> </p>
    </div>
  <% end %>
<% end %>
