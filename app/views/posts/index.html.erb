<% provide :page_title, 'Posts'%>
<h3 class="font_3" style="line-height:1.1em; text-align: center; font-size:94px;" xmlns="http://www.w3.org/1999/html">
  <span></span>
  <span style="letter-spacing: 0.05em;">Posts</span>
</h3>
<% @posts.each do |post|%>
<article class="card my-3">
  <section class="card-header">
    <%= post.user.email %>
  </section>

  <div class="card-body">
    <h2><%= post.title %></h2>

    <section class="card-text">
      <time datetime="<%= post.created_at %>">
        <small><%= post.created_at %></small>
      </time>

      <p class="my-2">
        <%= truncate strip_tags(post.body), lenght: 50, omission: '...(continued)'  %>
      </p>
    </section>


    <section>
    <%= link_to 'Show', post_path(post), class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
    <%= button_to 'Destroy', post_path(post), method: :delete, class: 'btn btn-danger' %>
    </section>
  </div>
</article>
<% end %>

<%= paginate @posts %>
<%= page_entries_info @posts, entry_name: 'posts' %>

