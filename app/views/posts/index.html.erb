<% @posts.each do |post|%>
<article class="card my-3">
  <section class="card-header">
    <%= post.user.email %>
  </section>

  <div class="card-body">
    <h2><%= post.title %></h2>

    <section class="card-text">
      <time datetime="<%= post.created_at %>">
        <small><%= post.created_at %></small>
      </time>

      <p class="my-2">
        <%= truncate strip_tags(post.body), lenght: 50, omission: '...(continued)'  %>
      </p>
    </section>

    <section>
    <%= link_to 'Show', post_path(post), class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
    <%= button_to 'Destroy', post_path(post), method: :delete, class: 'btn btn-danger' %>
    </section>
  </div>
</article>
<% end %>

<%= paginate @posts %>
