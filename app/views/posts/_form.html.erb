
<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, minlength: 5, placeholder: 'Title' %>
  </div>

  <%= f.check_box :mail_if_comment %>

  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>


  <div>
    <%= f.label :body %>
    <%= f.text_area :body, required: true, minlength: 5 %>
  </div>

  <%= f.submit({:class=>'btn btn-success'})%>
<% end %>
